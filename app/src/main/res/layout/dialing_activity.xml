<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DialingActivity" >


    <ImageView
        android:id="@+id/CallerImageView2"
        android:layout_width="98dp"
        android:layout_height="109dp"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/elapsedTime"
        app:srcCompat="@drawable/default_caller_image" />

    <TextView
        android:id="@+id/caller_id_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/caller_id"
        android:textColor="@android:color/black"
        android:textSize="26sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CallerImageView2" />

    <TextView
        android:id="@+id/phone_number_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/mobile"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caller_id_text_2" />

    <ImageButton
        android:id="@+id/btnRejectCall2"
        android:layout_width="106dp"
        android:layout_height="79dp"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/reject_call_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp" />

    <TableLayout
        android:layout_width="307dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toTopOf="@+id/btnRejectCall2"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_text_2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/addCallIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                app:srcCompat="@drawable/add_call_image" />

            <ImageView
                android:id="@+id/extraVolumeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                app:srcCompat="@drawable/message_image" />

            <ImageView
                android:id="@+id/bluetoothIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                app:srcCompat="@drawable/bluetooth_image"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/addCallText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="5pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                android:gravity="center"
                android:text="@string/add_call" />

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="5pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                android:gravity="center"
                android:text="@string/message" />

            <TextView
                android:id="@+id/bluetoothText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="5pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                android:gravity="center"
                android:text="@string/bluetooth" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/speakerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                app:srcCompat="@drawable/speaker_image"/>

            <ImageView
                android:id="@+id/keypadIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                app:srcCompat="@drawable/keypad_image"/>

            <ImageView
                android:id="@+id/muteIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="10pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                app:srcCompat="@drawable/mute_image"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/speakerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="5pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                android:gravity="center"
                android:text="@string/speaker" />

            <TextView
                android:id="@+id/muteText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="5pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                android:gravity="center"
                android:text="@string/mute" />

            <TextView
                android:id="@+id/keypadText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5pt"
                android:layout_marginTop="5pt"
                android:layout_marginRight="8pt"
                android:layout_marginBottom="10pt"
                android:gravity="center"
                android:text="@string/keypad" />
        </TableRow>

    </TableLayout>

    <Chronometer
        android:id="@+id/elapsedTime"
        android:layout_width="68dp"
        android:layout_height="19dp"
        android:layout_marginTop="7dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>