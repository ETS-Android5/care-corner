<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity">

    <TextView
        android:id="@+id/CareCornerLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/app_name"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="@id/main_menu_logo"
        app:layout_constraintStart_toStartOf="@id/main_menu_logo"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_logo" />

    <ImageButton
        android:id="@+id/btnMomBot"
        android:layout_width="76dp"
        android:layout_height="72dp"
        android:layout_marginStart="200dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/mombot"
        android:scaleType="fitXY"
        android:src="@drawable/mom_bot_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/CareCornerLogo"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/CareCornerLogo"
        app:layout_constraintTop_toBottomOf="@+id/CareCornerLogo" />

    <ImageButton
        android:id="@+id/btnJournal"
        android:layout_width="72dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/journal"
        android:scaleType="fitXY"
        android:src="@drawable/journal_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/mombot_text"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="@+id/mombot_text"
        app:layout_constraintTop_toBottomOf="@+id/mombot_text" />

    <TextView
        android:id="@+id/journal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="@string/journal"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnJournal"
        app:layout_constraintStart_toStartOf="@+id/btnJournal"
        app:layout_constraintTop_toBottomOf="@+id/btnJournal" />

    <TextView
        android:id="@+id/mombot_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="@string/mombot"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnMomBot"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="@+id/btnMomBot"
        app:layout_constraintTop_toBottomOf="@+id/btnMomBot" />

    <TextView
        android:id="@+id/fake_call_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="@string/fake_call"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnFakePhoneCall"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnFakePhoneCall"
        app:layout_constraintTop_toBottomOf="@+id/btnFakePhoneCall" />

    <TextView
        android:id="@+id/start_walk_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="@string/start_walk"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSafeWalk"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/btnSafeWalk"
        app:layout_constraintTop_toBottomOf="@+id/btnSafeWalk" />

    <ImageButton
        android:id="@+id/btnResourcesMenu"
        android:layout_width="72dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/resources"
        android:scaleType="fitXY"
        android:src="@drawable/resources_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/start_walk_text"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="@+id/start_walk_text"
        app:layout_constraintTop_toBottomOf="@+id/start_walk_text" />

    <TextView
        android:id="@+id/reporting_assistance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="@string/reporting_assistance"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnReportingAssistance"
        app:layout_constraintHorizontal_bias="0.577"
        app:layout_constraintStart_toStartOf="@+id/btnReportingAssistance"
        app:layout_constraintTop_toBottomOf="@+id/btnReportingAssistance" />

    <ImageButton
        android:id="@+id/btnReportingAssistance"
        android:layout_width="72dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/reporting_assistance"
        android:scaleType="fitXY"
        android:src="@drawable/reporting_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/journal_text"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/journal_text"
        app:layout_constraintTop_toBottomOf="@+id/journal_text" />

    <TextView
        android:id="@+id/panic_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="@string/panic_button"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnPanicButton"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/btnPanicButton"
        app:layout_constraintTop_toBottomOf="@+id/btnPanicButton" />

    <TextView
        android:id="@+id/resources_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="@string/resources"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnResourcesMenu"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@+id/btnResourcesMenu"
        app:layout_constraintTop_toBottomOf="@+id/btnResourcesMenu" />

    <ImageButton
        android:id="@+id/btnSetting"
        android:layout_width="72dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/settings"
        android:scaleType="fitXY"
        android:src="@drawable/settings_btn_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/reporting_assistance_text"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="@+id/reporting_assistance_text"
        app:layout_constraintTop_toBottomOf="@+id/reporting_assistance_text" />

    <TextView
        android:id="@+id/settings_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lato"
        android:text="@string/settings"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/btnSetting"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnSetting"
        app:layout_constraintTop_toBottomOf="@+id/btnSetting" />

    <ImageButton
        android:id="@+id/btnPanicButton"
        android:layout_width="72dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/panic_button"
        android:scaleType="fitXY"
        android:src="@drawable/panic_btn_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/resources_text"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/resources_text"
        app:layout_constraintTop_toBottomOf="@+id/resources_text" />

    <ImageButton
        android:id="@+id/btnFakePhoneCall"
        android:layout_width="72dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="200dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/fake_call"
        android:scaleType="fitXY"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/CareCornerLogo"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="@+id/CareCornerLogo"
        app:layout_constraintTop_toBottomOf="@+id/CareCornerLogo"
        app:srcCompat="@drawable/fake_walk_icon" />

    <ImageButton
        android:id="@+id/btnSafeWalk"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/start_walk"
        android:scaleType="fitXY"
        android:src="@drawable/start_walk_icon"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/fake_call_text"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/fake_call_text"
        app:layout_constraintTop_toBottomOf="@+id/fake_call_text" />

    <ImageView
        android:id="@+id/main_menu_logo"
        android:layout_width="416dp"
        android:layout_height="139dp"
        android:layout_marginBottom="16dp"
        android:background="#FFFFFF"
        android:contentDescription="@string/avatar_picture"
        app:layout_constraintBottom_toTopOf="@+id/CareCornerLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/care_corner_logo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="404dp"
        android:layout_height="64dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="@string/title"
        app:layout_constraintBottom_toTopOf="@+id/btnFakePhoneCall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.397"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_menu_logo"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/care_corner_header" />


</androidx.constraintlayout.widget.ConstraintLayout>